<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical"
    tools:context="com.example.junhongren.filestorage.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveToInternalStorage"
        android:text="写入到内部存储"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp" />

    <Button
        android:id="@+id/check_external_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检查外部存储是否可读写"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="137dp" />

    <Button
        android:id="@+id/external_public"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="以 public 形式写入到外部存储"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="137dp" />

    <Button
        android:id="@+id/external_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="以 private 形式写入到外部存储"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="218dp" />

    <Button
        android:id="@+id/delete_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除文件"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="218dp" />

</LinearLayout>
